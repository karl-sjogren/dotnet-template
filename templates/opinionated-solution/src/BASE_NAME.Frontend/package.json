{
  "name": "BASE_NAME.frontend",
  "packageManager": "yarn@4.10.3",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "lint:css": "stylelint (styles|static)/**/*.{scss,css}",
    "lint:js": "eslint scripts/**/*.{js,mjs}",
    "test": "vitest run",
    "test:chrome": "vitest run --browser.name=chrome --browser.headless",
    "test:safari": "vitest run --browser.name=safari",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --coverage",
    "test:coverage-report": "vitest run --coverage && npx --yes open-cli ./coverage/index.html",
    "test:ci": "vitest run --reporter=junit --coverage --outputFile=test-results/junit.xml"
  },
  "devDependencies": {
    "@codecov/vite-plugin": "^1.9.1",
    "@stylistic/eslint-plugin-js": "^4.4.1",
    "@stylistic/stylelint-plugin": "^4.0.0",
    "@testing-library/dom": "^10.4.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.13",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "browserslist": "^4.26.2",
    "cssnano": "^7.1.1",
    "esbuild": "^0.25.10",
    "esbuild-plugin-browserslist": "^1.0.1",
    "eslint": "^9.37.0",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-jsdoc": "^60.8.3",
    "eslint-plugin-testing-library": "^7.10.0",
    "jsdom": "^27.0.0",
    "jsdom-testing-mocks": "^1.16.0",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-visualizer": "^6.0.4",
    "sass": "^1.93.2",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "typescript": "^5.9.3",
    "undici": "^7.16.0",
    "vite": "^7.1.9",
    "vite-plugin-mkcert": "^1.17.9",
    "vitest": "^3.2.4",
    "webdriverio": "^9.20.0"
  }
}
