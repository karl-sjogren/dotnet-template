{
  "name": "BASE_NAME.frontend",
  "packageManager": "yarn@4.1.1",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "lint:css": "stylelint (styles|static)/**/*.{scss,css}",
    "lint:js": "eslint scripts/**/*.{js,mjs}",
    "test": "vitest run",
    "test:chrome": "vitest run --browser.name=chrome --browser.headless",
    "test:safari": "vitest run --browser.name=safari",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --coverage",
    "test:coverage-report": "vitest run --coverage && npx --yes open-cli ./coverage/index.html",
    "test:ci": "vitest run --reporter=junit --coverage --outputFile=test-results/junit.xml"
  },
  "devDependencies": {
    "@codecov/vite-plugin": "^0.0.1-beta.10",
    "@stylistic/eslint-plugin-js": "^2.3.0",
    "@stylistic/stylelint-plugin": "^2.1.2",
    "@testing-library/dom": "^10.3.2",
    "@vitest/browser": "^2.0.3",
    "@vitest/coverage-v8": "^2.0.3",
    "@vitest/ui": "^2.0.3",
    "autoprefixer": "^10.4.19",
    "browserslist": "^4.23.2",
    "cssnano": "^7.0.4",
    "esbuild": "^0.23.0",
    "esbuild-plugin-browserslist": "^0.14.0",
    "eslint": "^9.9.0",
    "eslint-plugin-compat": "^6.0.0",
    "eslint-plugin-jsdoc": "^50.0.1",
    "eslint-plugin-testing-library": "^6.2.2",
    "eslint-plugin-vitest": "^0.5.4",
    "jsdom": "^24.1.0",
    "jsdom-testing-mocks": "^1.13.0",
    "postcss": "^8.4.39",
    "postcss-scss": "^4.0.9",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.77.8",
    "stylelint": "^16.7.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "vite": "^5.3.4",
    "vite-plugin-mkcert": "^1.17.5",
    "vitest": "^2.0.3",
    "webdriverio": "^8.39.1"
  }
}
