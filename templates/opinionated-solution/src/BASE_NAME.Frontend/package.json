{
  "name": "BASE_NAME.frontend",
  "packageManager": "yarn@4.6.0",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "lint:css": "stylelint (styles|static)/**/*.{scss,css}",
    "lint:js": "eslint scripts/**/*.{js,mjs}",
    "test": "vitest run",
    "test:chrome": "vitest run --browser.name=chrome --browser.headless",
    "test:safari": "vitest run --browser.name=safari",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --coverage",
    "test:coverage-report": "vitest run --coverage && npx --yes open-cli ./coverage/index.html",
    "test:ci": "vitest run --reporter=junit --coverage --outputFile=test-results/junit.xml"
  },
  "devDependencies": {
    "@codecov/vite-plugin": "^1.9.0",
    "@stylistic/eslint-plugin-js": "^4.0.1",
    "@stylistic/stylelint-plugin": "^3.1.2",
    "@testing-library/dom": "^10.4.0",
    "@vitest/browser": "^3.0.7",
    "@vitest/coverage-v8": "^3.0.7",
    "@vitest/eslint-plugin": "^1.1.34",
    "@vitest/ui": "^3.0.7",
    "autoprefixer": "^10.4.20",
    "browserslist": "^4.24.4",
    "cssnano": "^7.0.6",
    "esbuild": "^0.25.0",
    "esbuild-plugin-browserslist": "^0.16.0",
    "eslint": "^9.21.0",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-jsdoc": "^50.6.3",
    "eslint-plugin-testing-library": "^7.1.1",
    "eslint-plugin-vitest": "^0.5.4",
    "jsdom": "^26.0.0",
    "jsdom-testing-mocks": "^1.13.1",
    "postcss": "^8.5.3",
    "postcss-scss": "^4.0.9",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-visualizer": "^5.14.0",
    "sass": "^1.85.1",
    "stylelint": "^16.14.1",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "typescript": "^5.7.3",
    "undici": "^7",
    "vite": "^6.2.0",
    "vite-plugin-mkcert": "^1.17.6",
    "vitest": "^3.0.7",
    "webdriverio": "^9.10.1"
  }
}
